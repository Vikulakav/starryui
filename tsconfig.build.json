{
 "exclude": ["node_modules"],
 "compilerOptions": {
  "declaration": true,
  "declarationMap": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "incremental": true,
  "isolatedModules": false,
  "module": "CommonJS",
  "moduleResolution": "node",
  "outDir": ".",
  "rootDir": ".",
  "skipLibCheck": true,
  "strict": true,
  "target": "ES2022",
  "paths": {
   "@starryui/*": ["./packages/*"]
  }
 },
 "include": ["./packages/**/*.ts"],
 "references": [
  { "path": "./packages/button" },
  { "path": "./packages/frame" },
  { "path": "./packages/layout" },
  { "path": "./packages/starryui-docs" },
  { "path": "./packages/theme" },
  { "path": "./packages/theme-midnight" },
  { "path": "./packages/traits" },
  { "path": "./packages/tray" }
 ]
}
